generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Speaker {
  id String @id @default(uuid())
  name String
  email String
  phone String
  avatar String?
  location String?
  yearsOfExperience Int @default(0)
  sessionsUrl String?
  socialLinks SocialLink[]
  bio String?
  topics Topic[]
  languages String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean? @default(true)
}

model Topic {
  id String @id @default(uuid())
  title String @unique
  speakers Speaker[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model SocialLink {
  id String @id @default(uuid())
  platform SocialPlatform
  url String
  speakerId String
  speaker Speaker @relation(fields: [speakerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum SocialPlatform {
  LINKEDIN
  TWITTER
  INSTAGRAM
  FACEBOOK
  YOUTUBE
  GITHUB
  TIKTOK
  SPOTIFY
  DISCORD
}